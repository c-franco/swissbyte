<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="swissbyte.Pages.FreeGames.FreeGamesPage"
             xmlns:freeGames="clr-namespace:swissbyte.Pages.FreeGames"
             BackgroundColor="{StaticResource MainGray}"
             Shell.BackgroundColor="{StaticResource MainGray}"
             Shell.ForegroundColor="{StaticResource GrayText}"
             Shell.TitleColor="{StaticResource GrayText}"
             Title="Juegos gratis">

    <CollectionView ItemsSource="{Binding Games}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Frame Margin="20" Padding="13" CornerRadius="12" HasShadow="True" BackgroundColor="{StaticResource SecondGray}" BorderColor="{StaticResource Borders}">
                    <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="Auto,*" RowSpacing="10" ColumnSpacing="10">

                        <!-- Imagen -->
                        <Image Grid.Row="0" Grid.RowSpan="2" Grid.Column="0"
                           Source="{Binding ImageUrl}"
                           WidthRequest="120" HeightRequest="100"
                           Aspect="AspectFill"
                           VerticalOptions="Center" />

                        <!-- Textos -->
                        <StackLayout Grid.Row="0" Grid.Column="1" Spacing="5">
                            <Label Text="{Binding Title}"
                               FontAttributes="Bold"
                               FontSize="16" />

                            <Label Text="{Binding Platform}"
                               FontSize="14"
                               TextColor="Gray" />

                            <Label Text="{Binding TimeLeft}"
                               FontSize="12"
                               TextColor="DarkRed" />
                        </StackLayout>

                        <!-- BotÃ³n -->
                        <Button Grid.Row="1" Grid.Column="1"
                            Text="Ir a la oferta"
                            Command="{Binding Source={RelativeSource AncestorType={x:Type freeGames:FreeGamesPage}}, Path=BindingContext.OpenUrlCommand}"
                            CommandParameter="{Binding RedirectUrl}"
                            BackgroundColor="#2196F3"
                            TextColor="White"
                            CornerRadius="5"
                            HorizontalOptions="Start"
                            Padding="10,5" />
                    </Grid>
                </Frame>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>


</ContentPage>