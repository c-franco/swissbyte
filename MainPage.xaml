<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="swissbyte.MainPage" 
             BackgroundColor="{StaticResource MainGray}">

    <ScrollView>
        <VerticalStackLayout>
            
            <Label Text="SwissByte"
               HorizontalOptions="Center"
               FontAttributes="Bold"
               FontSize="Title"
               FontFamily="OpenSansBold"
               TextColor="White"
               Margin="0,30,0,0"/>

            <Grid Padding="40" RowSpacing="15" ColumnSpacing="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Caja 1 -->
                <Frame Grid.Row="0" Grid.Column="0" BackgroundColor="{StaticResource SecondGray}" CornerRadius="12" HasShadow="True" Padding="13" BorderColor="{StaticResource Borders}">          
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="7">
                        <Label Text="📁" FontSize="15" HorizontalOptions="Center"/>
                        <Label Text="Caja 1" FontSize="15" FontAttributes="Bold" FontFamily="OpenSansBold" TextColor="{StaticResource GrayText}" HorizontalOptions="Center"/> 
                    </VerticalStackLayout>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Box1_Tapped" />
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- Caja 2 -->
                <Frame Grid.Row="0" Grid.Column="1" BackgroundColor="{StaticResource SecondGray}" CornerRadius="12" HasShadow="True" Padding="13" BorderColor="{StaticResource Borders}">
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="7">
                        <Label Text="📁" FontSize="15" HorizontalOptions="Center"/>
                        <Label Text="Caja 2" FontSize="15" FontAttributes="Bold" FontFamily="OpenSansBold" TextColor="{StaticResource GrayText}" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                    <!--<Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Box1_Tapped" />
                    </Frame.GestureRecognizers>-->
                </Frame>

                <!-- Caja 3 -->
                <Frame Grid.Row="0" Grid.Column="2" BackgroundColor="{StaticResource SecondGray}" CornerRadius="12" HasShadow="True" Padding="13" BorderColor="{StaticResource Borders}">
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="7">
                        <Label Text="📁" FontSize="15" HorizontalOptions="Center"/>
                        <Label Text="Caja 3" FontSize="15" FontAttributes="Bold" FontFamily="OpenSansBold" TextColor="{StaticResource GrayText}" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                    <!--<Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Box1_Tapped" />
                    </Frame.GestureRecognizers>-->
                </Frame>

                <!-- Caja 4 -->
                <Frame Grid.Row="1" Grid.Column="0" BackgroundColor="{StaticResource SecondGray}" CornerRadius="12" HasShadow="True" Padding="13" BorderColor="{StaticResource Borders}">
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="7">
                        <Label Text="📁" FontSize="15" HorizontalOptions="Center"/>
                        <Label Text="Caja 4" FontSize="15" FontAttributes="Bold" FontFamily="OpenSansBold" TextColor="{StaticResource GrayText}" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                    <!--<Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Box1_Tapped" />
                    </Frame.GestureRecognizers>-->
                </Frame>

                <!-- Caja 5 -->
                <Frame Grid.Row="1" Grid.Column="1" BackgroundColor="{StaticResource SecondGray}" CornerRadius="12" HasShadow="True" Padding="13" BorderColor="{StaticResource Borders}">
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="7">
                        <Label Text="📁" FontSize="15" HorizontalOptions="Center"/>
                        <Label Text="Caja 5" FontSize="15" FontAttributes="Bold" FontFamily="OpenSansBold" TextColor="{StaticResource GrayText}" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                    <!--<Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Box1_Tapped" />
                    </Frame.GestureRecognizers>-->
                </Frame>

                <!-- Caja 6 -->
                <Frame Grid.Row="1" Grid.Column="2" BackgroundColor="{StaticResource SecondGray}" CornerRadius="12" HasShadow="True" Padding="13" BorderColor="{StaticResource Borders}">
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="7">
                        <Label Text="📁" FontSize="15" HorizontalOptions="Center"/>
                        <Label Text="Caja 6" FontSize="15" FontAttributes="Bold" FontFamily="OpenSansBold" TextColor="{StaticResource GrayText}" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                    <!--<Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Box1_Tapped" />
                    </Frame.GestureRecognizers>-->
                </Frame>
            </Grid>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
